rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // الإعدادات العامة للمتجر - متاحة للقراءة فقط
    match /settings/{setting} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // المنتجات - متاحة للقراءة فقط
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // الفئات - متاحة للقراءة فقط
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // طلبات المستخدمين - يمكن للمستخدم قراءة طلباته فقط
    match /orders/{orderId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // بيانات المستخدمين - يمكن للمستخدم الوصول إلى بياناته فقط
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow delete: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
    }
    
    // العناوين - يمكن للمستخدم الوصول إلى عناوينه فقط
    match /addresses/{addressId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow delete: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
    }
    
    // المراجعات - يمكن للجميع القراءة، ولكن الإنشاء فقط للمستخدمين المسجلين
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
      allow delete: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.admin == true);
    }
  }
} 